{
  "swagger": "2.0",
  "info": {
    "title": "TrueAuth Api",
    "version": "0.1.0",
    "contact": {
      "name": "SirJager",
      "url": "https://github.com/sirjager/trueauth"
    }
  },
  "tags": [
    {
      "name": "TrueAuth",
      "description": "True Auth is a standalone authentication gRPC and rest api",
      "externalDocs": {
        "description": "Find out more about TrueAuth",
        "url": "https://github.com/sirjager/trueauth"
      }
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Welcome Message",
        "description": "Returns welcome message",
        "operationId": "TrueAuth_Welcome",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/trueauthWelcomeResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "tags": [
          "System"
        ]
      }
    },
    "/v1/allow-ip": {
      "post": {
        "summary": "Allow ip address",
        "description": "Allow ip address",
        "operationId": "TrueAuth_AllowIPAddress",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/trueauthAllowIPAddressResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "code",
            "description": "By default this will send email verification token to registered email\nif user has already requested email verification and has verification code then email is verified",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "Auth"
        ]
      }
    },
    "/v1/health": {
      "get": {
        "summary": "Api Health",
        "description": "Returns api health",
        "operationId": "TrueAuth_Health",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/trueauthHealthResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "tags": [
          "System"
        ]
      }
    },
    "/v1/login": {
      "post": {
        "summary": "Login User",
        "description": "Login User",
        "operationId": "TrueAuth_Login",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/trueauthLoginResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/trueauthLoginRequest"
            }
          }
        ],
        "tags": [
          "Auth"
        ]
      }
    },
    "/v1/register": {
      "post": {
        "summary": "Register User",
        "description": "Register User",
        "operationId": "TrueAuth_Register",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/trueauthRegisterResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/trueauthRegisterRequest"
            }
          }
        ],
        "tags": [
          "Auth"
        ]
      }
    },
    "/v1/verify-email": {
      "post": {
        "summary": "Request and verify email",
        "description": "Request and verify email",
        "operationId": "TrueAuth_VerifyEmail",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/trueauthVerifyEmailResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "code",
            "description": "By default this will send email verification token to registered email\nif user has already requested email verification and has verification code then email is verified",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "Auth"
        ]
      }
    }
  },
